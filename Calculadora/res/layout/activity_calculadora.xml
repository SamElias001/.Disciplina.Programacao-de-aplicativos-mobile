<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculadora.Calculadora" >

    <EditText
        android:id="@+id/valor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="@string/_0"
        android:inputType="number" />

    <EditText
        android:id="@+id/valor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/valor1"
        android:layout_below="@+id/valor1"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/_0"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/valor2"
        android:layout_centerVertical="true"
        android:text="Somar" />

    <Button
        android:id="@+id/buttonDividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonSoma"
        android:layout_alignBottom="@+id/buttonSoma"
        android:layout_toRightOf="@+id/resultadoView"
        android:text="Dividir" />

    <Button
        android:id="@+id/buttonMultiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonSoma"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="16dp"
        android:text="Multiplicar" />

    <Button
        android:id="@+id/buttonSubtrair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonMultiplicar"
        android:layout_alignBottom="@+id/buttonMultiplicar"
        android:layout_alignRight="@+id/valor2"
        android:text="Subtrair" />

    <TextView
        android:id="@+id/resultadoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMultiplicar"
        android:layout_marginTop="41dp"
        android:layout_toRightOf="@+id/buttonSoma"
        android:text="Resultado" />

</RelativeLayout>
